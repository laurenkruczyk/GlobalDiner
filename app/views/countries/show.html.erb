<div id="wrap">
  <div id="main">

  <body class= "background">

   <nav>
      <ul>
        <% if user_signed_in? %>
          <%= "Welcome #{current_user.first_name}"%>
          <%else%>
         <%= "Sign in to submit a recipe!" %>  
          <% end %>
      </ul>
    </nav>


  <h1 align="center"><%= @country.name %></h1>

    <table align= "center" width= "1050">
    <thead>
      <th> Let's Dish! </th>
      <th> So what's it like? </th>
      <th> Take me there! </th>
      
    </thead>

  <% @meals.each do |meal|%>
      <tbody>
        <tr>
        <td width="275"><%= meal.name %></td>
        <td width="500"><%= meal.description %></td>
        <td width="275"><%= link_to "View recipe", meal.url %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

  <div align="center"><%= button_to "Add New Recipe", new_country_meal_path(@country.id), :class => "button medium, font medium", :method => :get  %></div>
  </body>
